<h1>Reservation for <%=@restaurant.name%></h1>

<%= flash[:notice] %>

<%= form_for ([:restaurant, @reservation]) do |f| %>

<%=f.label :date%>
<%=f.text_field :date, :class => "datepicker" %>

<%=f.label :time%>
<%=f.select :time, [[1,1],[2,2],[3,3]] %>

<%=f.label :people%>
<%=f.text_field :people %>

<p></p>

<%= f.submit %>

<%end%>
